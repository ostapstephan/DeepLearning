#SSH Commands
#Taken from:
#https://www.simplified.guide/ubuntu/install-ssh-server

#do this first cuz duh
sudo apt update

#install ssh server
sudo apt install -y openssh-server

#check status
sudo systemctl status ssh

#start the ssh 
sudo systemctl start ssh

#disable and disconnect 
sudo systemctl disable ssh

# re-enable  the ssh connection
sudo systemctl enable ssh

#check what ports are availible
sudo netstat -npt

#kill the ssh process
sudo kill (PID OF PROGRAM) -9

#to ssh type
#ssh USER@IP -p PORT 
#then the password

#restart the system
sudo systemctl restart ssh

RUN MODEL ON 1 GPU
CUDA_VISIBLE_DEVICES=1 python MY_PROGRAM.py 


